{
	"info": {
		"name": "Online Poll System API",
		"description": "API collection for the Online Poll System. Includes Authentication, Polls, AI generation, and GraphQL samples.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login (Session)",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/accounts/login/",
							"host": ["{{base_url}}"],
							"path": ["accounts", "login", ""]
						}
					}
				}
			]
		},
		{
			"name": "Polls",
			"item": [
				{
					"name": "List Polls",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/polls/",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "polls", ""]
						}
					}
				}
			]
		},
		{
			"name": "AI Features",
			"item": [
				{
					"name": "Generate Poll from Prompt",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"prompt\": \"Create a survey about remote work.\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/v1/ai/generate-poll/",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "ai", "generate-poll", ""]
						}
					}
				}
			]
		},
		{
			"name": "GraphQL",
			"item": [
				{
					"name": "Query Polls",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "graphql",
							"graphql": {
								"query": "query {\n  polls {\n    id\n    title\n  }\n}",
								"variables": ""
							}
						},
						"url": {
							"raw": "{{base_url}}/graphql/",
							"host": ["{{base_url}}"],
							"path": ["graphql", ""]
						}
					}
				}
			]
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		}
	]
}
